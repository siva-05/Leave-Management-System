<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>testing</title>
</head>

<style>

  *{
    padding: 0;
    border: 0;
    margin: 0;
    word-spacing: 2px;
font-family:system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    font-size: 20px;
  }

  h1{
    margin-top: 60px;
    margin-left: 60px;
    padding-bottom: 5px;
    border-bottom: 3px solid black;
    width: 235px;
    
    font-size: 30px;
    font-family:system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    letter-spacing: 2px;
    
  }

  .main-container{
    width: 640px;
    border: 1px solid rgb(82, 74, 74);
    margin: 50px 170px;
    padding: 50px 50px;
    border-radius: 3px;
    
  }

table{
  text-align: left;
  
}


th{
  padding-right: 70px;
  padding-bottom: 30px;
}

td{
  padding-bottom: 30px;
}

.highlight{
  color: #d932c1;
}

</style>

<% studentportals.forEach(item => { %>
<body>
  <h1>Student Detail</h1>
  <div class="main-container">
  <table>
    <tr>
      <th>Registration Number</th>
      <td><%= item.regno %></td>
    </tr>
    <tr>
      <th>Student Name</th>
      <td><%= item.stuname %></td>
    </tr>
    <tr>
      <th>Date-of-birth</th>
      <td><%= item.dob %></td>
    </tr>
    <tr>
      <th>Gender</th>
      <td><%= item.gender %></td>
    </tr>
    <tr>
      <th>Citizen</th>
      <td><%= item.citizen %></td>
    </tr>
    <tr>
      <th>Mother Tongue</th>
      <td><%= item.mothertongue %></td>
    </tr>
    <tr>
      <th>Father Name</th>
      <td><%= item.fathername %></td>
    </tr>
    <tr>
      <th>Mother Name</th>
      <td><%= item.mothername %></td>
    </tr>
    <tr>
      <th>Roll Number</th>
      <td><%= item.rollno %></td>
    </tr>
    <tr>
      <th>Student Mobile</th>
      <td><%= item.stuphno %></td>
    </tr>
    <tr>
      <th>Parent Mobile</th>
      <td><%= item.parentphno %></td>
    </tr>
    <tr>
      <th>E-mail</th>
      <td><%= item.email %></td>
    </tr>
    <tr>
      <th>Total Days Absent</th>
      <td class="highlight"><%= item.abstotaldays %></td>
    </tr>
    <tr>
      <th>CGPA</th>
      <td><%= item.cgpa %></td>
    </tr>
    <tr>
      <th>Arrears</th>
      <td><%= item.arrear %></td>
    </tr>
    <tr>
      <th>Fav Student</th>
      <td><%= item.favstu %></td>
    </tr>
  </table>
</div>
  
</body>
<% }) %>
</html>